---
const { title, number, content, img } = Astro.props;
---

<div class="card">
    <img src={img} alt="" />

    <div class="card-block">
        <h2>{number}</h2>
        <h3>{title}</h3>
        <p>{content}</p>
    </div>
</div>

<style>
    .card {
        display: flex;
        gap: 15px;
    }

    .card img {
        width: 100px;
        object-fit: cover;
    }

    .card-block {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .card-block h2 {
        color: var(--Grayish-blue);
    }

    .card-block p {
        line-height: 1.5;
        color: var(--Dark-grayish-blue);
    }
</style>
